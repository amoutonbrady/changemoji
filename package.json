{
  "name": "changemoji",
  "version": "0.0.1",
  "description": "Gitmoji changelog generator",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "source": "src/main.ts",
  "bin": {
    "changemoji": "dist/main.js"
  },
  "scripts": {
    "start": "tsx main.ts",
    "build": "esbuild src/main.ts --bundle --platform=node --format=esm --outdir=dist --packages=external"
  },
  "keywords": [
    "gitmoji",
    "changelog",
    "generator"
  ],
  "author": "Alexandre Mouton-Brady <amoutonbrady@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "esbuild": "^0.18.17",
    "prettier": "^3.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
